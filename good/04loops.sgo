func main() {
    // There's only `for`, no `while`, no `until`
	for i := 1; i < 10; i++ {
        print(i);
	}
	i := 0;
	for ; i < 10; { // while - loop
		print(i);
		i += 10;
	}
	for i < 10 { // you can omit semicolons if there is only a condition
	}
	for { // you can omit the condition ~ while (true)
		print(10);
		break;
	}
}
